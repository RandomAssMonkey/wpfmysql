<Window x:Class="wpfmysql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfmysql"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
			<Button x:Name="AddBtn" Content="Hozzáad" Width="150" Click="AddBtn_Click"/>
			<Button x:Name="ModifyBtn" Content="Módosít" Width="150" Click="ModifyBtn_Click"/>
			<Button x:Name="DeleteBtn" Content="Töröl" Width="150" Click="DeleteBtn_Click"/>
		</StackPanel>
		<DataGrid x:Name="EmployeeTable" ItemsSource="{d:SampleData ItemCount= 20}"/>
	</DockPanel>
</Window>
